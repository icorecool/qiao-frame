.login[data-logig]
  height 100%
  width 100%
  position fixed
  top 0
  left 0
  background-image url("/static/images/main-bg-b.jpg"), url("/static/images/main-bg-t.jpg"), url("/static/images/main-bg-m.jpg")
  background-position center bottom, center top, center top
  background-repeat no-repeat, no-repeat, repeat-y
  .btn-submit
    background-color #00a0e9
    border none
    color #FFFFFF
    height 45px
    border-radius 20px
    font-size 22px
  .icon-user,
  .icon-lock
    display block
    width 21px
    height 100%
    background 50% 50% no-repeat
  .icon-user
    background-image url("./icon-user.png")
  .icon-lock
    background-image url("./icon-lock.png")
  .el-form-item
    margin-bottom 25px
    &:last-child
      margin-top 16px
  .kalix-form-item
    .el-input__inner
      height 45px
      border-color #d8dce5 !important
      border-radius 24px
      padding-left 24px
      font-size 18px
    &.is-success
      .el-input__inner
        border-color #d8dce5 !important
    &.is-error
      .el-input__inner
        border-color #00a0e9 !important
        box-shadow 0px 0px 6px rgba(188, 168, 120, 0.46)
      .el-form-item__error
        padding 0 0 0 22px
        line-height: 32px;
        background url("./icon-warning.png") 0 50% no-repeat
        color: #fe00000
  .error-message
    background url("./icon-warning.png") 0 50% no-repeat
    position absolute
    top 6px
    left 0
    line-height 18px
    color #fe0000
    font-size 14px
    padding-left: 24px;
  .from-warpper
    position fixed
    top 50%
    left 50%
    background 50% 50% url("/static/images/from-bg.png") no-repeat
    width 566px
    height 383px
    margin -192px 0 0 -283px

  .form
    margin: 0 auto
    width: 350px
    .tit
      height 41px
      line-height 41px
      text-align center
      font-size 20px
    .logo
      width: 100%
      height: 159px
      background-image: url("./login_oa_top.png")
    .loginForm
      position: relative;
      margin-left 0
      padding-top 52px

    .btn-submit
      display: block
      width: 100%
    .validate-code
      align-items center
      .img-wrapper
        padding 0 24px 0 36px
        img
          display block


